{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "object-curly-newline": "off",
    "comma-dangle": "off",
    "no-console": "off",
    "generator-star-spacing": "off"
  }
}
